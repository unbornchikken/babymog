{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "pwa-chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach",
            "port": 9229,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "outputCapture": "std",
            "sourceMaps": true,
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Server",
            "preLaunchTask": "build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\build\\server\\app.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "outputCapture": "std",
            "sourceMaps": true,
            "runtimeArgs": [
                "--enable-source-maps"
            ]
        }
    ]
}